{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "module": "Node16",
        "target": "ES6",
        "moduleResolution": "Node16",
        "noImplicitAny": false,
        "resolveJsonModule": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types",
        ],
    },
    "exclude": [
        "certs",
        "data",
        "node_modules",
        "resources",
    ],
    "include": [
        "**/*.js",
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [],
    }
}